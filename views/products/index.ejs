<h2>Products Table</h2>
<table class="table">
    <thead>
    <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    </thead>
    <tbody>
    <% products.forEach(product => { %>
        <tr>
            <td>
                <a href="<%= `/products/${product._id}` %>">
                    <%= product.title %>
                </a>
            </td>
            <td>
                <%= product.description %>
            </td>
            <td>
                <a href="<%=`products/${product._id}/edit`%>">
                    Edit
                </a>
            </td>
            <td>
                <a href="<%= `products/${product._id}/delete?_method=DELETE` %>" onclick="return confirm('Are you sure you want to delete this record?')">Delete</a>
            </td>
        </tr>
    <% }); %>
    </tbody>
</table>